def pods
	pod 'SwiftLint'
	pod 'Alamofire'
	pod 'LayoutKit'
	pod 'FPSCounter'
	pod 'KeychainAccess'
	pod 'IQKeyboardManagerSwift'
	pod 'Kingfisher'
	pod 'NextGrowingTextView'
	pod 'Fabric', '~> 1.7.9'
	pod 'Crashlytics', '~> 3.10.5'
	pod 'Cache'
  end

target 'FSPO' do
	pods
end
target 'FSPOUITests' do
	pods
end
target 'TodaySchedule' do
	pod 'Alamofire'
	pod 'LayoutKit'
end
target 'TommorowSchedule' do
	pod 'Alamofire'
	pod 'LayoutKit'
end